<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!--property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property-->
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/mesh</property>
    <property name="hibernate.connection.username">mesh</property>
    <property name="hibernate.connection.password">mesh</property>
    
    <mapping class="mesh.db.User" />
    <mapping class="mesh.db.Document" />
    <mapping class="mesh.db.Loan" />
    <mapping class="mesh.db.Order" />
    <mapping class="mesh.db.Client" />
  </session-factory>
</hibernate-configuration>
